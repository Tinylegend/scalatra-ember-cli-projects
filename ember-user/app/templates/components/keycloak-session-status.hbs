{{#if session.ready}}

    <div style="padding:1rem;">
        <button type="button" {{action 'refresh'}} class="btn btn-info">Refresh</button>
        <button type="button" {{action 'login'}} class="btn btn-info">Login</button>
        <button type="button" {{action 'logout'}} class="btn btn-info">Logout</button>
    </div>

    <table class='table'>
        <tr>
            <th>Ready</th>
            <td class="text-nowrap">{{session.ready}}</td>
        </tr>
        <tr>
            <th>Authenticated</th>
            <td class="text-nowrap">{{session.authenticated}}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td class="text-nowrap">{{session.name}}</td>
        </tr>
        <tr>
            <th>Subject</th>
            <td class="text-nowrap">{{session.subject}}</td>
        </tr>
        <tr>
            <th>Token</th>
            <td>{{session.token}}</td>
        </tr>
        <tr>
            <th>Refresh token</th>
            <td>{{session.refreshToken}}</td>
        </tr>
    </table>

    <table class="table">
        <tr>
            <th style="text-align: left;">Action</th>
            <th style="text-align: left;">Route</th>
            <th style="text-align: left;">Redirect</th>
            <th></th>
        </tr>
        <tr>
            <td>Login</td>
            <td class="text-nowrap">{{session.defaultLoginRoute}}</td>
            <td class="text-nowrap">{{session.defaultLoginRedirectUri}}</td>
            <td>{{link-to 'View' session.defaultLoginRoute}}</td>
        </tr>
        <tr>
            <td>Logout</td>
            <td class="text-nowrap">{{session.defaultLogoutRoute}}</td>
            <td class="text-nowrap">{{session.defaultLogoutRedirectUri}}</td>
            <td>{{link-to 'View' session.defaultLogoutRoute}}</td>
        </tr>
    </table>

{{else}}
    No session
{{/if}}
